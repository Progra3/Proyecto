@model IEnumerable<ProyectoProgra3.Models.Clientes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTema.cshtml";
}
<div style="text-align:center">
    <h2>Crear Usuarios</h2>
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @Class = "btn btn-primary" })
    </p>

    <h2>Ver Usuarios</h2>
</div>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="purple">
                        <h4 class="title">Usuarios Registrados</h4>
                        <p class="category">Usuarios que se encuentran en la base de datos</p>
                    </div>
                    <div class="card-content table-responsive">
                        <table class="table">
                            <thead class="text-primary">
                            <th>@Html.DisplayNameFor(model => model.Nombres)</th>
                            <th>@Html.DisplayNameFor(model => model.Apellidos)</th>
                            <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombres)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Apellidos)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Direccion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Telefono)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ClienteID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.ClienteID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.ClienteID })
                                        </td>
                                    </tr>
                                }



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






